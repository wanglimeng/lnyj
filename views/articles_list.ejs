    <![endif]-->
    <style>
      body {
        background-color: #fff;
      }
      .nihao {
        z-index: 0;
      }
      #btn {
        width: 300px;
        position: absolute;
        top: 0;
        left: 50%;
        z-index: 1000;
        display: none;
      }
    </style>
  </head>
  <body>

    <div class="container-fluid">
      
      <div class="row">

        <div class="col-md-2">
          <div class="list-group">
            <a href="/" class="list-group-item text-center list-group-item-success">
              首页
            </a>
            <a href="/articles/list" class="list-group-item list-group-item-info">文章列表</a>
            <a href="#" class="list-group-item list-group-item-info">好友列表</a>
            <a href="#" class="list-group-item list-group-item-info">私信</a>
            <a href="#" class="list-group-item list-group-item-info">用户资料设置</a>
            
        </div>
        
        </div>
      
      <div class="col-md-10">

        <div class="page-header text-center">
          <h1>文章列表 <small>修改/删除文章</small></h1>
        </div>
        
        <table class="table">
          <tr>
            <td>文章标题</td>
            <td>创建时间</td>
            <td>修改</td>
            <td>删除</td>
          </tr>
          <% for (let i = 0;i<res.length;i++) {%>
          <tr>
            <td><%=res[i].article_title%></td>
            <td><%=res[i].createdAt%></td>
            <td> <a href="/articles/alter/<%=res[i].id%>">修改</a> </td>
            <td> <a href="/articles/remove/<%=res[i].id%>">删除</a> </td>
          </tr>
          <% }%>
        </table>
        
      </div>

      </div>
      

    </div> <!-- /container -->
    
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery-3.1.1.min.js"></script>
